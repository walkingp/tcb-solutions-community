.banner{
  width: 100%;
  height: 200rpx;
  background: #4a90e2;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0;
  margin-bottom: 160rpx;
}
.banner>view{
  margin: 20rpx auto 0;
  width: 90%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}
.avatarBox{
  box-sizing: border-box;
  padding: 40rpx;
}
.avatarBox>view{
  margin: 0 auto 0;
  background: #d8d8d8;
  border-radius: 5rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.avatarBox>view>image{
  display: block;
  width: 100%;
  height: 100%;
}
.avatarBox>text{
  line-height: 80rpx;
  text-align: center;
  color: #333;
  display: block;
  font-weight: bold;
}
.listBox{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding-left:40rpx;
  background: #fff;
}
.listLi{
  width: 100%!important;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 100rpx;
  color: #333333;
  background: transparent;
  font-weight: normal;
}
.listLi:nth-last-child(1)>view{
  border-top: 1rpx solid #eeeeee;
  border-bottom: none;
}
.listLi>.iconfont{
  display: block;
  color: #4a90e2;
  font-size: 40rpx;
  width: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}
.listLi>view{
  width: calc(100% - 70rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eeeeee;
  padding-right: 20rpx;
}
button.listLi>view{
  border-bottom: none !important;
}
.listLi>view>.iconfont{
  color: #cccccc;
}