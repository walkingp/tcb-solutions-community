page,
.container{
  background: #fff;
}
/* banner */
.banner{
  width: 100%;
  height: 200rpx;
  background: #4a90e2;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0;
  margin-bottom: 160rpx;
}
.banner>view{
  margin: 20rpx auto 0;
  width: 90%;
  border-radius: 10rpx;
  overflow: hidden;
}

.banner swiper,
.banner swiper image{
  display: block;
  width: 100%;
}
/* banner end */
/* 跳转集合 */
.skipUl{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding:40rpx;
}
.skipUl>navigator{
  background: #F1F8FF;  
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 48%;
  float: left;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}
.skipUl>navigator:nth-child(odd){
  margin-right: 4%;
}
.skipUl>navigator>view>text{
  display: block;
}
.skipUl>navigator>view>text:nth-of-type(1){
  font-weight: bold;
  color: #333;
  font-size: 30rpx;
}
.skipUl>navigator>view>text:nth-of-type(2){
  color: #999;
  font-size: 24rpx;
}
.skipUl>navigator>image{
  display: block;
  width: 100rpx;
  height: 100rpx;
}
/* 跳转集合 end */


.nearbyUl{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding:0 40rpx 40rpx 40rpx;
}
.nearbyTitle{
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}
.nearbyTitle>button{
  background-image: linear-gradient(225deg, #00C8FE 0%, #4FACFE 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 15rpx;
  width: 210rpx;
  line-height: 80rpx;
  height: 80rpx;
  animation: 1s infinite pulse;
  margin:0;
}
.nearbyli{
  width: 100%;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 0;
}
.nearbyTitle text.active{
  color: #4a90e2;
}

.nearbyTitle>view>text:nth-of-type(1){
  color: #333;
  font-size: 36rpx;
}
.nearbyTitle>view>text:nth-of-type(2){
  color: #999;
  font-size: 28rpx;
}

.nearbyli:nth-last-of-type(1){
  border-bottom: none;
}
.nearbyTitle>view>text,
.nearbyli text{
  display: block;
}
.nearbyli>view:nth-of-type(1),
.nearbyli>view:nth-of-type(2){
  line-height: 60rpx;
}
.nearbyli>view:nth-of-type(1)>text:nth-of-type(1){
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.nearbyli>view:nth-of-type(1)>text:nth-of-type(2){
  font-size: 26rpx;
  color: #666;
}
.nearbyli>view:nth-of-type(2)>text:nth-of-type(1){
  font-size: 26rpx;
  color: #999;
  text-align: right;
}
.nearbyli>view:nth-of-type(2)>text:nth-of-type(2){
  background: #fceee9;
  font-size: 22rpx;
  color: #E8541E;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding: 0 14rpx;
  height: 50rpx;
  line-height: 50rpx;
}